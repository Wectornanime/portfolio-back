    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.3",
    "@types/pg": "^8.15.6",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "prisma": "^7.1.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",

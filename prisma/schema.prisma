generator client {
  provider = "prisma-client"
  output   = "../src/database/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id        Int      @id @default(autoincrement())
  imageUrl  String?
  title     String
  text      String
  links     Link[]
  createdAt DateTime @default(now())
}

model Link {
  id        Int      @id @default(autoincrement())
  projectId Int
  title     String
  link      String
  createdAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
}

model Certificate {
  id        Int      @id @default(autoincrement())
  title     String
  link      String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

model Skill {
  id        Int      @id @default(autoincrement())
  title     String
  iconUrl   String
  createdAt DateTime @default(now())
}

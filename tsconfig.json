{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@adapter/*": ["./src/adapter/*"],
      // "@types/*": ["./src/@types/*"],
      // "@models/*": ["./src/models/*"],
      // "@controllers/*": ["./src/controllers/*"],
      // "@dtos/*": ["./src/dtos/*"],
      // "@services/*": ["./src/services/*"],
      // "@middlewares/*": ["./src/middlewares/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
